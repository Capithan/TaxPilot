{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    { "src": "api/sse.ts", "use": "@vercel/edge" },
    { "src": "api/bridge.ts", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/sse$", "dest": "/api/sse", "continue": false },
    { "src": "^/health$", "dest": "/api/bridge", "continue": false },
    { "src": "^/client/.*", "dest": "/api/bridge", "continue": false },
    { "src": "^/intake/.*", "dest": "/api/bridge", "continue": false },
    { "src": "^/appointments.*", "dest": "/api/bridge", "continue": false },
    { "src": "^/tax-pros.*", "dest": "/api/bridge", "continue": false },
    { "src": "^/reminders/.*", "dest": "/api/bridge", "continue": false },
    { "src": "^/$", "dest": "/api/bridge", "continue": false },
    { "src": "^/.*", "dest": "/api/bridge" }
  ]
}
